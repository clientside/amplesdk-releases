<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<element extends="xul:XULElement" name="tabbox" type="regular">
	<implements />
	<abstract>
		<locale xml:lang="ru">
			Контейнер для создания переключаемых страниц.
			Элемент <link type="element">tabbox</link> должен иметь только два дочерних элемента: элемент <link type="element">tabs</link>, который содержит закладки и элемент <link type="element">tabpanels</link>, который содержит содержимое страниц, привязанных к соответствующим закладкам.
			Этот тип элемента <link type="element">box</link> по умолчанию имеет вертикальную ориентацию.
		</locale>
	</abstract>
	<remarks />
	<examples />
	<members>
		<attributes />
		<methods />
		<properties>
			<property name="tabs" type="AMLElement" readonly="true">
				<description>
					<locale xml:lang="ru">
						Ссылка на дочерний элемент <link type="element">tabs</link>.
					</locale>
				</description>
			</property>
			<property name="tabpanels" type="AMLElement" readonly="true">
				<description>
					<locale xml:lang="ru">
						Ссылка на дочерний элемент <link type="element">tabpanels</link>.
					</locale>
				</description>
			</property>
			<property name="selectedIndex" type="Number" readonly="true">
				<description>
					<locale xml:lang="ru">
						Содержит порядковый номер выбранной в настоящее время закладки.
					</locale>
				</description>
			</property>
			<property name="selectedPanel" type="AMLElement" readonly="true">
				<description>
					<locale xml:lang="ru">
						Ссылка на выбранный в настоящее время элемент <link type="element">tabpanel</link>.
					</locale>
				</description>
			</property>
			<property name="selectedTab" type="AMLElement" readonly="true">
				<description>
					<locale xml:lang="ru">
						Ссылка на выбранный в настоящее время элемент <link type="element">tab</link>, который всегда является одним из дочерних элементов элемента <link type="element">tabs</link>.
					</locale>
				</description>
			</property>
		</properties>
		<events />
	</members>
</element>