<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<element extends="xul:XULElement" name="tab" type="regular">
	<implements />
	<abstract>
		<locale xml:lang="ru">
			Закладка в элементе <link type="element">tabs</link>.
			Выбирая этот элемент, происходит отображение ассоциированной страницы <link type="element">tabbox</link>.
		</locale>
	</abstract>
	<remarks />
	<examples />
	<members>
		<attributes>
			<attribute name="selected" default="" readonly="false">
				<description>
					<locale xml:lang="ru">
						Атрибут, указывающий, что закладка должна быть выбрана по умолчанию.
					</locale>
				</description>
			</attribute>
			<attribute name="label" default="" readonly="false">
				<description>
					<locale xml:lang="ru">
						Текст для закладки.
					</locale>
				</description>
			</attribute>
			<attribute name="image" default="" readonly="false">
				<description>
					<locale xml:lang="ru">
						URL пиктограммы для закладки.
					</locale>
				</description>
			</attribute>
		</attributes>
		<methods />
		<properties />
		<events>
			<event name="command" group="Event" cancelable="false" bubbles="true">
				<description>
					<locale xml:lang="ru">
						Загорается при навигации на закладку.
					</locale>
				</description>
			</event>
		</events>
	</members>
</element>