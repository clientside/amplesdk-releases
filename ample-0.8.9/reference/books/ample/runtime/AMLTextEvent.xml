<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<object name="AMLTextEvent" extends="runtime:AMLEvent">
	<abstract>
		<locale>
			The TextEvent interface provides specific contextual information associated with Text Events.
		</locale>
		<locale xml:lang="ru">
			Интерфейс TextEvent предоставляет контекстную информацию, относительно введенного текста.
		</locale>
	</abstract>
	<examples/>
	<members>
		<methods>
			<method name="initTextEvent" type="Void">
				<arguments>
					<argument name="sEventType" type="String" required="true">
						<description>
							<locale xml:lang="ru">
								Указывает на тип события (Event.type).
							</locale>
						</description>
					</argument>
					<argument name="bCanBubble" type="Boolean" required="true">
						<description>
							<locale xml:lang="ru">
								Указывает, может ли событие распространяться в фазе "bubbling".
							</locale>
						</description>
					</argument>
					<argument name="bCancelable" type="Boolean" required="true">
						<description>
							<locale xml:lang="ru">
								Указывает, возможно ли отменить ответную реакцию браузера по умолчанию на событие.
							</locale>
						</description>
					</argument>
					<argument name="oView" type="Window" required="true">
						<description>
							<locale xml:lang="ru">
								Содержит указатель на обьект представления.
							</locale>
						</description>
					</argument>
					<argument name="sData" type="String" required="true">
						<description>
							<locale xml:lang="ru">
								Содержит UTF-8 текст.
							</locale>
						</description>
					</argument>
				</arguments>
				<description>
					<locale>
						Initializes attributes of a <link type="object">AMLTextEvent</link> object.
					</locale>
					<locale xml:lang="ru">
						Метод initTextEvent используется для инициализации значения объекта TextEvent.
					</locale>
				</description>
			</method>
		</methods>
		<attributes />
		<properties>
			<property name="view" type="Window" readonly="true">
				<description>
					<locale>
						Identifies the AbstractView from which the event was generated.
					</locale>
					<locale xml:lang="ru">
						Содержит указатель на обьект представления, в котором было сгененировано событие.
					</locale>
				</description>
			</property>
			<property name="charCode" type="String" readonly="true">
				<description>
					<locale>
						Holds the value of the characters generated by the character deviceю
					</locale>
					<locale xml:lang="ru">
						Содержит введенные данные.
					</locale>
				</description>
			</property>
		</properties>
		<constants />
	</members>
	<remarks>
		<remark>
			<locale>Events of that type:</locale>
      <locale xml:lang="ru">События этого типа:</locale>
      <ul>
        <li><link type="event" href="runtime:AMLElement">textInput</link></li>
      </ul>
		</remark>
	</remarks>
	<examples />
</object>