<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<element extends="xul:XULElement" name="button" type="regular">
	<implements />
	<abstract>
		<locale xml:lang="ru">
			Кнопка, элемент, который может быть нажат.
			Обработчики событий могут отслеживать нажатия мышью, клавиатурой и др.
		</locale>
	</abstract>
	<remarks />
	<examples />
	<members>
		<attributes>
			<attribute name="label" default="" readonly="false">
				<description>
					<locale xml:lang="ru">
						Текст для элемента.
					</locale>
				</description>
			</attribute>
			<attribute name="image" default="" readonly="false">
				<description>
					<locale xml:lang="ru">
						URL к пиктограмме для элемента.
					</locale>
				</description>
			</attribute>
		</attributes>
		<methods />
		<properties />
		<events>
			<event name="command" group="Event" cancelable="false" bubbles="true">
				<description>
					<locale xml:lang="ru">
						Загорается при нажатии кнопки.
					</locale>
				</description>
			</event>
		</events>
	</members>
</element>