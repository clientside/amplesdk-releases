<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<object name="AMLResizeEvent" extends="runtime:AMLUIEvent">
	<abstract>
		<locale>
			The AMLResizeEvent interface provides specific contextual information associated with Resize Events.
		</locale>
		<locale xml:lang="ru">
			Интерфейс AMLResizeEvent предоставляет контекстную информацию, специфичную для событий пользовательского интерфейса.
		</locale>
	</abstract>
	<examples/>
	<members>
		<methods>
			<method name="initResizeEvent" type="Void">
				<arguments>
					<argument name="sEventType" type="String" required="true">
						<description>
							<locale>
								Specifies the event type.
							</locale>
							<locale xml:lang="ru">
								Указывает на тип события (Event.type).
							</locale>
						</description>
					</argument>
					<argument name="bCanBubble" type="Boolean" required="true">
						<description>
							<locale>
								Specifies whether or not the event can bubble.
							</locale>
							<locale xml:lang="ru">
								Указывает, может ли событие распространяться в фазе "bubbling".
							</locale>
						</description>
					</argument>
					<argument name="bCancelable" type="Boolean" required="true">
						<description>
							<locale>
								Specifies whether or not the event's default action can be prevented.
							</locale>
							<locale xml:lang="ru">
								Указывает, возможно ли отменить ответную реакцию браузера по умолчанию на событие.
							</locale>
						</description>
					</argument>
					<argument name="oView" type="Object" required="true">
						<description>
							<locale xml:lang="ru">
								Указывает на обьект View, в котором произошло событие.
							</locale>
						</description>
					</argument>
					<argument name="nDetail" type="Number" required="true">
						<description>
							<locale xml:lang="ru">
								Указывает дополнительное значение, ассоциированииое с данным событием.
							</locale>
						</description>
					</argument>
					<argument name="nEdge" type="Number" required="true">
						<description>
							<locale>
								Indicates what edge of the object gets resized.
							</locale>
						</description>
					</argument>
				</arguments>
				<description>
					<locale>
						Initializes attributes of a <link type="object">AMLResizeEvent</link> object.
					</locale>
					<locale xml:lang="ru">
						Метод initResizeEvent используется для инициализации значения объекта ResizeEvent.
					</locale>
				</description>
			</method>
		</methods>
		<properties>
			<property name="edge" type="Number" readonly="true">
				<description>
					<locale>
						Indicates what edge of the object gets resized.
					</locale>
				</description>
			</property>
		</properties>
		<constants />
	</members>
	<remarks>
		<remark>
			<locale>Events of that type:</locale>
      <locale xml:lang="ru">События этого типа:</locale>
      <ul>
        <li><link type="event" href="runtime:mResize">resize</link></li>
        <li><link type="event" href="runtime:mResize">resizestart</link></li>
        <li><link type="event" href="runtime:mResize">resizeend</link></li>
      </ul>
		</remark>
	</remarks>
	<examples />
</object>